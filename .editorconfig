# Top-most EditorConfig file
root = true

# Applies to all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# For Markdown files: don't strip trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

